<div id="editForm">
  <h2>Изменить данные клиента</h2>
  <form name="editClientForm" action="/auth/homePage/edit/{{clients.id}}" method="post">
    <div>
      <p>Wechat ID</p>
      <input name="wechatId" type="text" placeholder="Wechat ID" value="{{clients.wechatId}}" required />
    </div>
    <div>
      <p>Total amount</p>
      <input name="totalAmount" type="text" placeholder="Total amount" value="{{clients.totalAmount}}" />
      {{!-- default: 0 --}}
    </div>
    <div>
      <p>Currency</p>
      <input name="currency" type="text" placeholder="Currency" value="{{clients.currency}}" required />
    </div>
    <div>
      <p>Status</p>
      <input name="status" type="text" placeholder="Status" value="{{clients.status}}" /> {{!-- default: 'basic' --}}
    </div>
    <div>
      <p>Trade Date</p>
      <input name="tradeDate" type="text" placeholder="Trade Date" value="{{clients.tradeDate}}" required />
    </div>
    <div>
      <p>Действия</p>
      <button type="submit">Change a client</button>
      <button type="reset">Reset</button>
    </div>
  </form>
</div>
